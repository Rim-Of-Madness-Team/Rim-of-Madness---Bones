<Defs>

  <ThingDef ParentName="HatMakeableBase">
    <defName>ROMB_Apparel_SkullMask</defName>
    <label>skull mask</label>
    <description>A terrifying mask. Hides the wearer's face and makes them more confident.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Things/Item/Apparel/SkullMask/SkullMask</texPath>
