<Defs>

	<RecipeDef>
		<defName>MakeBoneChina</defName>
		<label>make bone ash</label>
		<description>Make a batch of bone ash by burning bones at high temperatures.</description>
		<jobString>Making bone ash.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>4000</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BoneItem</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BoneItem</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<BoneChina>20</BoneChina>
		</products>
		<researchPrerequisite>BoneRefine</researchPrerequisite>
	</RecipeDef>

