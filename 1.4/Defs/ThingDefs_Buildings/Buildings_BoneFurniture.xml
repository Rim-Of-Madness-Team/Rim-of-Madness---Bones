<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>BoneChair</defName>
    <label>bone chair</label>
    <drawGUIOverlay>true</drawGUIOverlay>
    <drawGUIOverlayQuality>false</drawGUIOverlayQuality>
    <description>A large, ornate chair, made from bones, designed for a noble to sit and reign. Thrones define the room in which they are placed as a throneroom, and sitting on the satisfies nobles' need for authority.</description>
    <defaultPlacingRot>South</defaultPlacingRot>
    <altitudeLayer>Building</altitudeLayer>
    <category>Building</category>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <hasInteractionCell>true</hasInteractionCell>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>12000</WorkToBuild>
      <Mass>40</Mass>
      <Flammability>0.0</Flammability>
      <Beauty>4</Beauty>
      <Comfort>0.75</Comfort>
    </statBases>
    <socialPropernessMatters>true</socialPropernessMatters>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <costList>
      <BoneItem>150</BoneItem>
    </costList>
    <pathCost>30</pathCost>
    <fillPercent>0.40</fillPercent>
    <building>
      <isSittable>true</isSittable>
    </building>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <graphicData>
      <texPath>Things/Building/Furniture/SkullChair/SkullChair</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,3.5)</drawSize>
      <shadowData>
        <volume>(0.6, 0.6, 0.6)</volume>
      </shadowData>
      <damageData>
        <rectN>(0,0,1,0.703125)</rectN>
        <rectS>(0.09375,0,0.84375,1)</rectS>
        <rectE>(0,0,0.84375,0.625)</rectE>
        <rectW>(0.15625,0,0.84375,0.625)</rectW>
      </damageData>
    </graphicData>
  </ThingDef>
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>BoneThrone</defName>
    <label>skull throne</label>
    <description>A grand throne, made from bones, designed for a noble to sit and reign. Thrones define the room in which they are placed as a throneroom, and sitting on the satisfies nobles' need for authority.</description>
    <defaultPlacingRot>South</defaultPlacingRot>
	<altitudeLayer>Building</altitudeLayer>
    <category>Building</category>
    <size>(3,2)</size>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>42000</WorkToBuild>
      <Mass>100</Mass>
      <Flammability>0.0</Flammability>
      <Beauty>5</Beauty>
      <Comfort>0.9</Comfort>
    </statBases>
    <socialPropernessMatters>true</socialPropernessMatters>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <costList>
      <BoneItem>1000</BoneItem>
    </costList>
    <pathCost>30</pathCost>
<!--    <rotatable>false</rotatable> -->
    <fillPercent>0.45</fillPercent>
    <building>
      <isSittable>true</isSittable>
    </building>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <graphicData>
      <texPath>Things/Building/Furniture/BoneThroneErok/BoneThrone</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,2)</drawSize>
      <damageData>
        <rect>(0.05,0.1,0.9,0.9)</rect>
      </damageData>
    </graphicData>
  </ThingDef>
</Defs>